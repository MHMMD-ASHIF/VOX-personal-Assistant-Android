<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VOXPersonalAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/animation</item>
    </style>




<!--night mode -->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorForeground">#99FFFFFF</item>

    </style>

<!-- notification -->
    <style name="notificationIconSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notification</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorForeground">#99FFFFFF</item>

    </style>


    <!-- Private -->
    <style name="privateIconSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorForeground">#99FFFFFF</item>


    </style>


    <style name="pink_round" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/DeepPink</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorForeground">#99FFFFFF</item>


    </style>

    <style name="auto_complete" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/Gold</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorForeground">#99FFFFFF</item>


    </style>

    <style name="Data_saver" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night</item>
        <item name="colorSwitchThumbNormal">#fff</item>
        <item name="android:colorForeground">#99FFFFFF</item>


    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>






</resources>