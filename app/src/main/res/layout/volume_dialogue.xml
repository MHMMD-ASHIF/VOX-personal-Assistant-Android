<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background__"
    android:alpha="0.8">


    <TextView
        android:id="@+id/text_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Adjust Volume"
        android:textColor="#fff"
        android:textSize="16sp"
        />

    <SeekBar
        android:id="@+id/sound_seeker"
        android:layout_width="300dp"
        android:backgroundTint="@color/yellow"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_vol"
        android:layout_centerHorizontal="true"

        />



    <Button
        android:id="@+id/Sound_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sound_seeker"
        android:textAllCaps="false"
        android:backgroundTint="@color/notification"
        android:textColor="@android:color/white"/>


</RelativeLayout>